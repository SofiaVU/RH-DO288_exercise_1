{
    "kind": "BuildConfig",
    "apiVersion": "build.openshift.io/v1",
    "metadata": {
        "name": "custom-pipeline"
    },
    "spec": {
        "source": {
            "type": "Git",
            "git": {
                "uri": "https://github.com/SofiaVU/DO288_exercise_1.git",
                "ref": "custom-pipeline"
            },
            "contextDir": "app"
        },
        "strategy": {
            "type": "JenkinsPipeline",
            "jenkinsPipelineStrategy": {
                "jenkinsfilePath": "src/main/ocp/Jenkinsfile"
            }
        }
    }
}

